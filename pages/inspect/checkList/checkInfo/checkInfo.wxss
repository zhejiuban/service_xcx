/* pages/inspect/checkList/checkInfo/checkInfo.wxss */

.img_top{
  width: 100%;
  text-align: center;
}

.list {
  display: flex;
  flex-grow: row no-wrap;
  padding: 10rpx 30rpx;
  color: #666;
  font-size: 28rpx;
  border-bottom: 1rpx solid #eee;
}

.list-bewrite {
  display: flex;
  flex-grow: row no-wrap;
  padding: 15rpx 30rpx;
  color: #666;
  font-size: 28rpx;
  border-bottom: 1rpx solid #eee;
}

.list-bewrite .bewrite {
  border: 1px solid #eee;
  padding: 10rpx;
  border-radius: 10rpx;
  height: 140rpx;
  width: 500rpx;
}

.list_label {
  line-height: 70rpx;
}

.list_value {
  line-height: 70rpx;
}

.list image {
  width: 100rpx;
  height: 70rpx;
  padding: 0 10rpx;
}

.order_title{
  /* text-align: center; */
  padding: 20rpx;
  height: 40rpx;
  line-height: 40rpx;
  color: #666;
  font-size: 34rpx;
  font-weight: bolder;
}



.section {
  display: flex;
  flex-grow: row no-wrap;
  padding: 15rpx 40rpx;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 28rpx;
  position: relative;
  color: #333;
  border-bottom: 1rpx solid #eee;
}

.section_remarks {
  display: flex;
  flex-grow: row no-wrap;
  padding: 15rpx 40rpx;
  height: 160rpx;
  font-size: 28rpx;
  position: relative;
  color: #333;
  border-bottom: 1rpx solid #eee;
}

.section_title {
  font-size: 28rpx;
  width: 25%;
  line-height: 100rpx;
}

.remraks {
  border: 1rpx solid #eee;
  padding: 10rpx;
  border-radius: 10rpx;
  height: 140rpx;
  width: 70%;
}

.btn-area {
  position: fixed;
  bottom: 0;
  width: 100%;
}

.btn-area>button {
  color: #fff;
  background-color: #4898fa;
  height: 100rpx;
  line-height: 100rpx;
  border: none;
  border-radius: 0;
}

.stars {
  position: relative;
  width: 100%;
  height: 100rpx;
}

.star-image {
  position: absolute;
  right: 0;
  width: 100rpx;
  height: 100rpx;
  src: "../../images/normal.png";
}

.item {
  position: absolute;
  top: 50rpx;
  width: 75rpx;
  height: 150rpx;
}

.record_list{
  margin-top: 20rpx;
  /* margin-bottom: 100rpx; */
  padding: 20rpx;
  background-color: #eee;
}

.record{
  position: relative;
  color: #333;
  background-color: #fff;
  padding: 20rpx; 
  margin: 20rpx 20rpx;
  border-radius: 10rpx;
  height: 180rpx;
  border-left: 20rpx solid #4898fa;
}

.text1{
  display: block;
  padding: 10rpx;
  font-size: 28rpx;
}

.text2{
  font-size: 32rpx;
  font-weight: 600;
  display: block;
  padding: 10rpx;
}

.recode_info{
  display: block;
  font-size: 24rpx;
  padding: 10rpx;
}

.record_more{
  position: absolute;
  right: 20rpx;
  top: 90rpx;
  width: 50rpx;
  height: 50rpx;
}

.get_more{
  margin: 20rpx 20rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 30rpx;
  color: #586c94;
  background-color: #fff;
  border-radius: 10rpx;
}

.btn-area {
  position: fixed;
  bottom: 0;
  width: 100%;
}

.btn-area>button {
  color: #fff;
  background-color: #4898fa;
  height: 100rpx;
  line-height: 100rpx;
  border: none;
  border-radius: 0;
}