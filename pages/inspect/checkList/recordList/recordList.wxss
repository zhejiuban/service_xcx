/* pages/inspect/checkList/recordList/recordList.wxss */

page{
  background-color: #eee;
}

.title{
   position: fixed; 
  top: 0rpx;
  display: block;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #fff;
  text-align: center;
  z-index: 100;
}

.record_list{
  margin-top: 10rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
  background-color: #eee;
}

.record{
  position: relative;
  color: #333;
  background-color: #fff;
  padding: 20rpx; 
  margin: 20rpx 20rpx;
  border-radius: 10rpx;
  height: 180rpx;
  border-left: 20rpx solid #4898fa;
}

.text1{
  display: block;
  padding: 10rpx;
  font-size: 28rpx;
}

.text2{
  font-size: 32rpx;
  font-weight: 600;
  display: block;
  padding: 10rpx;
}

.recode_info{
  display: block;
  font-size: 24rpx;
  padding: 10rpx;
}

.record_more{
  position: absolute;
  right: 20rpx;
  top: 90rpx;
  width: 50rpx;
  height: 50rpx;
}

.item-list{
  width: 100%;
  height: 100rpx;
  line-height: 70rpx;
  text-align: center;
  font-size: 28rpx;
  color: #9c9c9c;
}

.item-none{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 38rpx;
  color: #9c9c9c;
}