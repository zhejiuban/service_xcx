/* pages/repairAssign/repairAssign.wxss */
.title{
  width: 100%;
  text-align: center;
  padding: 15rpx;
}

.item-ans {
  width: 100%;
  display: flex; 
  flex-grow: row no-wrap;
  justify-content: space-between;
  padding: 30rpx;
  box-sizing: border-box;
  height: 180rpx;
  align-items: center;
  border-bottom: 2rpx solid #f2f2f2;
}

.item-list{
  width: 100%;
  height: 100rpx;
  line-height: 70rpx;
  text-align: center;
  font-size: 28rpx;
  color: #9c9c9c;
}

.item-none{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 38rpx;
  color: #9c9c9c;
}

.avatar {
  width: 130rpx;
  height: 130rpx;
  position: relative;
  text-align: center;
}

.avatar .img {
  width: 130rpx;
  height: 130rpx;
}

.expertInfo {
  position: relative;
  width: 80%;
  font-size: 24rpx;
  color: #b0b0b0;
  /* line-height: 1.5em; */
  height: 130rpx;
  padding-left: 20rpx;
}

.expertInfo .name {
  font-size: 34rpx;
  color: #000;
  margin-bottom: 10rpx;
}

.expertInfo .wait_tag {
  width: 75%;
}

.tab-content {
  /* margin-top: 90rpx; */
}

.scoll-h {
  height: 100%;
}

.refuse_btn {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 120rpx;
  height: 50rpx;
  line-height: 50rpx;
  background-color: red;
  font-size: 24rpx;
  color: #fff;
  border-radius: 0;
}

.evaluate_btn {
  position: absolute;
  bottom: 0rpx;
  right: 10rpx;
  width: 120rpx;
  height: 50rpx;
  line-height: 50rpx;
  background-color: #4898fa;
  font-size: 24rpx;
  color: #fff;
  border-radius: 0;
}
