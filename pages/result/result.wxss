/* pages/evaluate/evaluate.wxss */
.content{
  height: 120vh;
}

.list {
  display: flex;
  flex-grow: row no-wrap;
  padding: 10rpx 30rpx;
  color: #666;
  font-size: 28rpx;
  border-bottom: 1rpx solid #eee;
}

.list_label {
  line-height: 70rpx;
}

.list_value {
  line-height: 70rpx;
}

.section1 {
  display: flex;
  flex-grow: row no-wrap;
  padding: 15rpx 40rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  position: relative;
  color: #333;
  border-bottom: 1rpx solid #eee;
}

.textarea_view {
  border-bottom: 1rpx solid #eee;
  display: flex;
  flex-grow: row no-wrap;
  padding: 15rpx;
  font-size: 14px;
  position: relative;
  color: #333;
}

.textarea_view textarea {
  border: 1px solid #eee;
  border-radius: 10rpx;
  width: 700rpx;
  height: 200rpx;
  padding: 10rpx;
}
.section1 input {
  width: 600rpx;
  padding: 10rpx;
}
.section1 .mult {
  width: 90%;
}

.title {
  width: 100%;
  text-align: center;
  padding: 20rpx 0rpx;
  font-size: 18px;
}

.section {
  display: flex;
  flex-grow: row no-wrap;
  padding: 15rpx 40rpx;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 28rpx;
  position: relative;
  color: #333;
  border-bottom: 1rpx solid #eee;
}

.section_remarks {
  display: flex;
  flex-grow: row no-wrap;
  padding: 15rpx 10rpx;
  height: 160rpx;
  font-size: 14px;
  position: relative;
  color: #333;
  border-bottom: 1rpx solid #eee;
}

.section_title {
  font-size: 28rpx;
  width: 25%;
}

.radio-group{
  width: 90%;
  margin: 0rpx 5%;
  display: flex;
  flex-grow: row wrap;
  justify-content: space-around;
}

.remarks {
  border: 1rpx solid #eee;
  padding: 10rpx;
  border-radius: 10rpx;
  height: 140rpx;
  width: 90%;
  margin: 0rpx 5%;
}

.btn-area {
  position: fixed;
  bottom: 0;
  width: 100%;
}

.btn-area>button {
  color: #fff;
  background-color: #4898fa;
  height: 100rpx;
  line-height: 100rpx;
  border: none;
  border-radius: 0;
}

.stars {
  position: relative;
  width: 100%;
  height: 100rpx;
}

.star-image {
  position: absolute;
  right: 0;
  width: 100rpx;
  height: 100rpx;
  src: "../../images/normal.png";
}

.section .uploader_imgs{
  width:100rpx;
  height:100rpx;
  padding: 0 10rpx;  
}

.uploaderBtn image {
  width: 100rpx;
  height: 100rpx;
}

.prompt{
  margin-top: 15rpx; 
  overflow:auto;
  height:70rpx;
  padding: 10rpx;
  line-height: 35rpx;
  color: #999;
}

.item {
  position: absolute;
  top: 50rpx;
  width: 75rpx;
  height: 150rpx;
}
